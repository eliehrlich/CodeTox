using PyPlot
#using Distributions
using Plots
using ColorSchemes

solar = ColorSchemes.solar

n = 100
x = range(-3, 3, length=n)
y = range(-3, 3, length=n)

xgrid = repeat(x',n,1)
ygrid = repeat(y,1,n)
z = zeros(n,n)

for i in 1:n
    for j in 1:n
        z[i,j] = pdf(MvNormal([0.0; 0.0], [1 0.5; 0.5 1.0]),[x[i];y[j]]) # multivariate normal distribution MvNormal(eye(2))
    end
end

